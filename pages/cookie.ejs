<html>
    <head>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <div class="box">
            <h1><%= (locals.title) ? title : "Cookies" %></h1>
            <p>Here are your current cookies.</p>
            <% if (locals.data) { %>
                <p><%= data %></p>
            <% } %>
            <a href="/cookies/clear"><input type="button" value="Clear Cookies"></a>
        </div>
        <div class="box">
            <span>View your cookies: <a href="/"><button>Cookies</button></a></span>
        </div>
    </body>
</html>